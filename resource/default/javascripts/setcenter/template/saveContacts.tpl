<div style="padding: 10px 20px 20px 20px;">
    <div class="sbox-tr" style="padding: 5px 0px;">
        <div class="sbox-tt lt"><span class="red m-r5">*</span>显示标题</div>
        <div class="sbox-td lt">
            <input id="js_contatcs_tt" class="add-org-nametxt" placeholder="上海办事处" value="{name}" style="width: 250px;" type="text" />
        </div>
        <div class="clear"></div>
    </div>
    <div class="sbox-tr" style="padding: 5px 0px;">
        <div class="sbox-tt lt"><span class="red m-r5">*</span>联系方式</div>
        <div class="sbox-td lt">
            <input id="js_contatcs_tel" class="add-org-nametxt" value="{tel}" placeholder="例如：021-87654321" style="width: 250px;" type="text" />
        </div>
        <div class="clear"></div>
    </div>
    <div class="sbox-tr" style="padding: 5px 0px;">
        <div class="sbox-tt lt"><span class="red">&nbsp;</span>其它信息</div>
        <div class="sbox-td lt">
            <textarea id="js_contatcs_info" placeholder="可填写其它联系信息，例如联系人、传真、地址等" style="width: 250px; height:70px; padding:5px;">{addr}</textarea>
        </div>
        <div class="clear"></div>
    </div>
    <div class="tright">
        <span class="gray96x32 m-r10">取消</span>
        <span class="blue96x32">保存</span>
    </div>
</div>